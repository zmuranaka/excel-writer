<Window x:Class="ExcelWriter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExcelWriter"
        mc:Ignorable="d"
        Title="Excel Writer" Height="450" Width="800">
    <Grid>
        <Label Content="Open File:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120" FontSize="24"/>
        <Button Content="Browse" HorizontalAlignment="Left" Margin="135,22,0,0" VerticalAlignment="Top" Width="100" FontSize="16" Click="Button_Click"/>
        <Label Content="Timer:" HorizontalAlignment="Left" Margin="10,88,0,0" VerticalAlignment="Top" Width="120" FontSize="24"/>
        <Button Content="Start" HorizontalAlignment="Left" Margin="135,100,0,0" VerticalAlignment="Top" Width="100" FontSize="16"/>
        <Button Content="Stop" HorizontalAlignment="Left" Margin="270,100,0,0" VerticalAlignment="Top" Width="100" FontSize="16"/>
    </Grid>
</Window>
